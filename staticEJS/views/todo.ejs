<!DOCTYPE html>
<html>
<head>
  <title>Todo App</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f4f6f8;
      padding: 40px;
    }

    h2 {
      color: #333;
      margin-bottom: 20px;
    }

    a.logout {
      display: inline-block;
      margin-bottom: 20px;
      text-decoration: none;
      color: #fff;
      background-color: #f44336;
      padding: 6px 12px;
      border-radius: 6px;
    }

    a.logout:hover {
      background-color: #d32f2f;
    }

    ul {
      list-style: none;
      padding: 0;
    }

    li {
      background-color: #fff;
      margin-bottom: 12px;
      padding: 14px 20px;
      border-radius: 8px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .done {
      text-decoration: line-through;
      color: gray;
    }

    form {
      display: inline;
    }

    button {
      margin-left: 6px;
      padding: 6px 10px;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }

    .complete-btn {
      background-color: #4CAF50;
      color: #fff;
    }

    .complete-btn:hover {
      background-color: #45a049;
    }

    .delete-btn {
      background-color: #f44336;
      color: #fff;
    }

    .delete-btn:hover {
      background-color: #d32f2f;
    }

    .add-todo {
      display: inline-block;
      margin-bottom: 20px;
      text-decoration: none;
      color: #fff;
      background-color: #2196F3;
      padding: 8px 16px;
      border-radius: 6px;
    }

    .add-todo:hover {
      background-color: #1976D2;
    }
  </style>
</head>
<body>
  <h2>My Todos</h2>
  <a class="add-todo" href="/todos/new">âž• Add Todo</a>
  <a class="logout" href="/logout">Logout</a>

  <ul>
    <% todos.forEach(todo => { %>
      <li class="<%= todo.status === 'completed' ? 'done' : '' %>">
        <span><%= todo.title %> â€” <%= todo.status %></span>
        <span>
          <% if (todo.status !== 'completed') { %>
            <form action="/todos/<%= todo._id %>/complete" method="POST">
              <button class="complete-btn">âœ”</button>
            </form>
          <% } %>
          <form action="/todos/<%= todo._id %>/delete" method="POST">
            <button class="delete-btn">ðŸ—‘</button>
          </form>
        </span>
      </li>
    <% }) %>
  </ul>
</body>
</html>
